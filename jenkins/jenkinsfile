pipeline {
    agent any

    tools {
        maven "Maven-3.9"
        jdk "JDK17"
    }

    environment {
        APP_DIR = 'app'
        DOCKERHUB_REPO = 'your-dockerhub-username/java-app' // Update this
        IMAGE_TAG = "${BUILD_NUMBER}"
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    url: 'git@github.com:Amit-Shahal/jenkins-pipeline-task.git',
                    credentialsId: 'github-ssh-key'
            }
        }

        stage('Build') {
            steps {
                dir("${APP_DIR}") {
                    sh 'mvn -B -DskipTests clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir("${APP_DIR}") {
                    sh 'mvn -B test'
                }
            }
            post {
                always {
                    junit "${APP_DIR}/target/surefire-reports/*.xml"
                }
            }
        }

        stage('Archive') {
            steps {
                dir("${APP_DIR}") {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${APP_DIR}") {
                    sh """
                        docker build -t ${DOCKERHUB_REPO}:${IMAGE_TAG} .
                        docker tag ${DOCKERHUB_REPO}:${IMAGE_TAG} ${DOCKERHUB_REPO}:latest
                    """
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                sh """
                    echo \$DOCKERHUB_CREDENTIALS_PSW | docker login -u \$DOCKERHUB_CREDENTIALS_USR --password-stdin
                    docker push ${DOCKERHUB_REPO}:${IMAGE_TAG}
                    docker push ${DOCKERHUB_REPO}:latest
                """
            }
        }

        stage('Cleanup') {
            steps {
                sh """
                    docker logout
                    docker rmi ${DOCKERHUB_REPO}:${IMAGE_TAG} || true
                    docker rmi ${DOCKERHUB_REPO}:latest || true
                """
            }
        }
    }

    post {
        failure {
            echo 'Build or tests failed!'
        }
        success {
            echo 'Build and tests succeeded! Docker image pushed to Docker Hub.'
        }
    }
}